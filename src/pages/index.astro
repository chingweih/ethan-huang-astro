---
import { Image } from 'astro:assets'
import { Github } from 'simple-icons-astro'
import profileImage from '../assets/ethan-huang.jpg'
import Layout from '../layouts/Layout.astro'
---

<Layout
  class='h-svh flex flex-col items-start justify-center gap-5'
  header={false}
>
  <div class='flex mt-2 gap-5 justify-between items-center'>
    <Image
      src={profileImage}
      alt='黃靖緯 Ethan Huang'
      class='rounded-md w-[60px]'
      transition:name='logo'
    />
    <div class='flex flex-col items-start justify-center w-full gap-2'>
      <h1 class='text-3xl font-semibold' transition:name='name'>
        黃靖緯 <span
          class='font-normal text-lg text-slate-400 whitespace-nowrap'
          >Ethan Huang</span
        >
      </h1>
      <div class='flex items-center justify-start gap-2' transition:name='sub'>
        <a href='https://github.com/chingweih'><Github size={18} /></a>
        <a href='mailto:e@ethanhuang.me' class='underline'>e@ethanhuang.me</a>
      </div>
    </div>
  </div>
  <div class='px-2 py-1 border-l-2 border-slate-700 rounder-md'>
    <p>Learning everything!</p>
    <p>📍新北市・台灣</p>
  </div>
  <div>
    <a href='/about' class='underline'>About</a>{' ・ '}
    <a href='/blog' class='underline'>Blog</a>
  </div>
</Layout>
