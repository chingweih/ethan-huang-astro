---
import Layout from '../layouts/Layout.astro'
---

<Layout title='Blog' description='Under construction'>
  <div class='bg-green-900 rounded-xl px-6 py-6 text-white w-full mt-5 text-xs'>
    <h1 class='text-2xl font-semibold mb-3'>工程告示</h1>
    <table class='w-full bordered-table'>
      <colgroup>
        <col class='w-[12.5%]' />
        <col class='w-[12.5%]' />
        <col class='w-[12.5%]' />
        <col class='w-[12.5%]' />
        <col class='w-[12.5%]' />
        <col class='w-[12.5%]' />
        <col class='w-[12.5%]' />
        <col class='w-[12.5%]' />
      </colgroup>
      <tbody>
        <tr>
          <td class='text-left' colspan={3}
            >工程名稱<br /><span class='text-[6px]'>(Project Name)</span></td
          >
          <td class='text-left' colspan={3}>Markdown Blog</td>
          <td class='text-center font-bold' colspan={2} rowspan={2}
            >🚧 UNDER CONSTRUCTION</td
          >
        </tr>
        <tr>
          <td class='text-left' colspan={3}
            >施工期間<br /><span class='text-[6px]'>(Duration)</span></td
          >
          <td class='text-left' colspan={3}>2025/01/01-2025/06/01</td>
        </tr>
        <tr>
          <td class='text-left' colspan={3}
            >負責人<br /><span class='text-[6px]'>(Site Manager)</span></td
          >
          <td class='text-left' colspan={2}>黃靖緯</td>
          <td class='text-left' colspan={1}>網址</td>
          <td class='text-left' colspan={2}
            ><a href='/' class='underline'>https://ethanhuang.me</a></td
          >
        </tr>
      </tbody>
    </table>
  </div>
</Layout>
